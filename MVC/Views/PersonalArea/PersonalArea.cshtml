@{
    Layout = null;
    var userName = ViewBag.UserName;
    var userEmail = ViewBag.UserEmail;
    var orders = ViewBag.Orders;
    var borrowedBooks = ViewBag.BorrowedBooks;
    var waitingBooks = ViewBag.WaitingBooks;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Personal Area</title>
    <link rel="stylesheet" href="~/CSS/Homepage.css">
    <link rel="stylesheet" href="~/CSS/PersonalArea.css"> <!-- סטייל מותאם אישית -->
</head>

<body>
    <header>
        <h1>Personal Area</h1>
        <nav class="nav-container">
            <a href="@Url.Action("Index", "Home")" class="btn btn-nav">Home</a>
            <a href="@Url.Action("LeaveSiteReview", "SiteReview")" class="btn btn-nav">Leave a Site Review</a>
            @if (Session["UserName"] != null)
            {
                <form action="@Url.Action("Logout", "Users")" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-logout">Logout</button>
                </form>
            }
        </nav>
    </header>

    <main>
        @if (Session["UserName"] == null)
        {
            <section class="error-message">
                <h2>You need to log in to view this page.</h2>
                <a href="@Url.Action("Login", "Users")" class="btn btn-login">Go to Login</a>
            </section>
        }
        else
        {
            <section class="user-details">
                <h2>Welcome, @userName</h2>
                <p><strong>Email:</strong> @userEmail</p>
                <form action="@Url.Action("UpdateDetails", "PersonalArea")" method="post" class="update-form">
                    <input type="text" name="name" placeholder="New Name" class="input-field" />
                    <input type="email" name="email" placeholder="New Email" class="input-field" />
                    <input type="password" name="password" placeholder="New Password" class="input-field" />
                    <button type="submit" class="btn btn-update">Update Details</button>
                </form>
            </section>

            <section class="orders">
                <h2>Your Orders</h2>
                <ul>
                    @foreach (var order in orders)
                    {
                        <li>
                            @order.product - @order.date - @order.price$
                            <a href="@Url.Action("LeaveBookReview", "BookReview", new { bookId = order.book_id })" class="btn btn-review">
                                Leave a Review
                            </a>
                        </li>
                    }
                </ul>
            </section>

            <section class="borrowed-books">
                <h2>Your Borrowed Books</h2>
                <ul>
                    @foreach (var book in borrowedBooks)
                    {
                        <li>@book.book_name - Borrowed on: @book.date_taken, Return by: @book.return_date</li>
                    }
                </ul>
            </section>

            <section class="waiting-list">
                <h2>Your Waiting List</h2>
                <ul>
                    @foreach (var book in waitingBooks)
                    {
                        <li>@book.book_name - Added on: @book.date</li>
                    }
                </ul>
            </section>
        }
    </main>

    <footer>
        <p>&copy; 2025 Digital Library</p>
    </footer>
</body>

</html>
