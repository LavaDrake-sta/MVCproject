@{
    Layout = null;
    var userName = ViewBag.UserName;
    var userEmail = ViewBag.UserEmail;
    var orders = ViewBag.Orders;
    var borrowedBooks = ViewBag.BorrowedBooks;
    var waitingBooks = ViewBag.WaitingBooks;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Personal Area</title>
    <link rel="stylesheet" href="~/CSS/Homepage.css">
    <link rel="stylesheet" href="~/CSS/PersonalArea.css"> <!-- סטייל מותאם אישית -->
</head>

<body>
    <header>
        <h1>Personal Area</h1>
        <nav class="nav-container">
            <a href="@Url.Action("HomePage", "Home")" class="btn btn-nav">Home</a>
            <a href="@Url.Action("SiteReview", "SiteReview")" class="btn btn-nav">Leave a Site Review</a>
            @if (Session["UserName"] != null)
            {
                <form action="@Url.Action("Logout", "Users")" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-logout">Logout</button>
                </form>
            }
        </nav>
    </header>

    <main>
        @if (Session["UserName"] == null)
        {
            <section class="error-message">
                <h2>You need to log in to view this page.</h2>
                <a href="@Url.Action("Login", "Users")" class="btn btn-login">Go to Login</a>
            </section>
        }
        else
        {
            <!-- ✅ ספרים שנרכשו -->
            <section class="purchased-books">
                <h2>הספרים שרכשת</h2>
                @if (ViewBag.PurchasedBooks != null && ViewBag.PurchasedBooks.Count > 0)
                {
                    <table>
                        <thead>
                            <tr>
                                <th>שם הספר</th>
                                <th>מחיר</th>
                                <th>תאריך רכישה</th>
                                <th>ביקורת</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var book in ViewBag.PurchasedBooks)
                            {
                                <tr>
                                    <td>@book.product</td>
                                    <td>$@book.price</td>
                                    <td>@book.date.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <a href="@Url.Action("BookReview", "BookReview", new { bookName = book.product })" class="btn btn-review">
                                            השאר ביקורת
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>לא נמצאו רכישות.</p>
                }
            </section>

            <!-- ✅ ספרים מושכרים -->
            <section class="borrowed-books">
                <h2>הספרים שאתה משכיר</h2>
                @if (ViewBag.BorrowedBooks != null && ViewBag.BorrowedBooks.Count > 0)
                {
                    <table>
                        <thead>
                            <tr>
                                <th>שם הספר</th>
                                <th>קטגוריה</th>
                                <th>תאריך השכרה</th>
                                <th>תאריך החזרה</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var book in ViewBag.BorrowedBooks)
                            {
                                <tr>
                                    <td>@book.book_name</td>
                                    <td>@book.category</td>
                                    <td>@book.date_taken.ToString("dd/MM/yyyy")</td>
                                    <td>@book.return_date.ToString("dd/MM/yyyy")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>לא נמצאו ספרים מושכרים.</p>
                }
            </section>

            <!-- ✅ ספרים ברשימת המתנה -->
            <section class="waiting-list">
                <h2>רשימת ההמתנה שלך</h2>
                @if (ViewBag.WaitingBooks != null && ViewBag.WaitingBooks.Count > 0)
                {
                    <table>
                        <thead>
                            <tr>
                                <th>שם הספר</th>
                                <th>תאריך הצטרפות לרשימה</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var book in ViewBag.WaitingBooks)
                            {
                                <tr>
                                    <td>@book.book_name</td>
                                    <td>@book.date.ToString("dd/MM/yyyy")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>לא נמצאו ספרים ברשימת ההמתנה.</p>
                }
            </section>
        }
    </main>

    <footer>
        <p>&copy; 2025 Digital Library</p>
    </footer>
</body>

</html>
