@{
    Layout = null;
    var userName = Session["UserName"];
    var userEmail = ViewBag.UserEmail;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout</title>
    <link rel="stylesheet" href="~/CSS/CheckOutPage.css">
</head>

<body>
    <header>
        <h1>Order Checkout</h1>
    </header>

    <main>
        <!-- הודעת שגיאה או הצלחה -->
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }

        <!-- פרטי המשתמש -->
        <section class="order-details">
            <h2>Hello, @userName</h2>
            <p>Email: @userEmail</p>

            <h3>Your Cart Items:</h3>
            <ul>
                @foreach (var item in ViewBag.CartItems)
                {
                    <li>@item.BookName - @item.Price$ (@item.Type)</li>
                }
            </ul>
        </section>

        <!-- טופס תשלום -->
        <section class="payment-form">
            <h2>Payment Details</h2>
            <form action="@Url.Action("SubmitOrder", "Orders")" method="post" id="checkoutForm">
                <div>
                    <label for="cardOwner">Card Owner Name:</label>
                    <input type="text" id="cardOwner" name="cardOwner" placeholder="Full Name">
                </div>

                <div>
                    <label for="cardNumber">Card Number:</label>
                    <input type="text" id="cardNumber" name="cardNumber" maxlength="16" placeholder="16-digit number">
                </div>

                <div>
                    <label for="expiryDate">Expiry Date (MM/YY):</label>
                    <input type="text" id="expiryDate" name="expiryDate" maxlength="5" placeholder="MM/YY">
                </div>

                <div>
                    <label for="cvc">CVC:</label>
                    <input type="text" id="cvc" name="cvc" maxlength="3" placeholder="3-digit code">
                </div>

                <button type="submit" class="checkout-button">Place Order</button>
            </form>
        </section>
    </main>

    <footer>
        <p>&copy; 2025 Digital Library</p>
    </footer>
</body>
</html>