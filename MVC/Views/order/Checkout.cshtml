@{
    Layout = null;
    var userName = Session["UserName"];
    var userEmail = ViewBag.UserEmail;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout</title>
    <link rel="stylesheet" href="~/CSS/CheckOutPage.css">
</head>

<body>
    <header>
        <h1>Order Checkout</h1>
    </header>

    <main>
        <!-- בדיקה אם המשתמש מחובר -->
        @*@if (userName == null)
        {
            <p>You are not logged in. Please <a href="@Url.Action("Login", "Users")">log in</a> to complete your order.</p>
            return;
        }*@

        <!-- פרטי המשתמש -->
        <section class="order-details">
            <h2>Hello, @userName</h2>
            <p>Email: @userEmail</p>

            <h3>Your Cart Items:</h3>
            <ul>
                @foreach (var item in ViewBag.CartItems)
                {
                    <li>@item.BookName - @item.Price$ (@item.Type)</li>
                }
            </ul>
        </section>

        <!-- טופס תשלום -->
        <section class="payment-form">
            <h2>Payment Details</h2>
            <form action="@Url.Action("SubmitOrder", "orders")" method="post" id="checkoutForm">
                <div>
                    <label for="cardOwner">Card Owner Name:</label>
                    <input type="text" id="cardOwner" name="cardOwner" required>
                </div>

                <div>
                    <label for="cardNumber">Card Number:</label>
                    <input type="text" id="cardNumber" name="cardNumber" pattern="\\d{16}" maxlength="16" required placeholder="16-digit number">
                </div>

                <div>
                    <label for="expiryDate">Expiry Date (MM/YY):</label>
                    <input type="text" id="expiryDate" name="expiryDate" maxlength="5" placeholder="MM/YY" required />
                </div>

                <div>
                    <label for="cvc">CVC:</label>
                    <input type="text" id="cvc" name="cvc" pattern="\\d{3}" maxlength="3" required placeholder="3-digit code">
                </div>

                <button type="submit" class="checkout-button">Place Order</button>
            </form>
        </section>
    </main>

    <footer>
        <p>&copy; 2025 Digital Library</p>
    </footer>

</body>
</html>