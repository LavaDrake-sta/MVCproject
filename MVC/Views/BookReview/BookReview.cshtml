@{
    Layout = null;
    var userEmail = Session["UserEmail"]; // יטען את המייל של המשתמש המחובר
    var bookId = ViewBag.BookId; // מזהה הספר שעבורו מוסיפים ביקורת
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Leave a Book Review</title>
</head>

<body>
    <h1>Leave a Book Review</h1>
    <form action="@Url.Action("AddReview", "BookReview")" method="post">
        <input type="hidden" name="email" value="@userEmail" />
        <input type="hidden" name="bookId" value="@bookId" />
        <label for="review">Your Review:</label>
        <textarea id="review" name="reviewContent" rows="4" required></textarea>
        <button type="submit" class="btn btn-submit">Submit Review</button>
    </form>
</body>

</html>