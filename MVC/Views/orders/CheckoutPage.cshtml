@{
    Layout = null;
    var userName = Session["UserName"];
    var userEmail = ViewBag.UserEmail;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout</title>
    <link rel="stylesheet" href="~/CSS/CheckOutPage.css">
</head>

<body>
    <header>
        <h1>Order Checkout</h1>
    </header>

    <main>
        <!-- בדיקה אם המשתמש מחובר -->
        @if (userName == null)
        {
            <p>You are not logged in. Please <a href="@Url.Action("Login", "Users")">log in</a> to complete your order.</p>
            return;
        }

        <!-- פרטי המשתמש -->
        <section class="order-details">
            <h2>Hello, @userName</h2>
            <p>Email: @userEmail</p>

            <h3>Your Cart Items:</h3>
            <ul>
                @foreach (var item in ViewBag.CartItems)
                {
                    <li>@item.product - @item.price$ (@item.buy_borrow)</li>
                }
            </ul>
        </section>

        <!-- טופס תשלום -->
        <section class="payment-form">
            <h2>Payment Details</h2>
            <form action="@Url.Action("SubmitOrder", "Order")" method="post" id="checkoutForm">
                <div>
                    <label for="cardOwner">Card Owner Name:</label>
                    <input type="text" id="cardOwner" name="cardOwner" required>
                </div>

                <div>
                    <label for="cardNumber">Card Number:</label>
                    <input type="text" id="cardNumber" name="cardNumber" pattern="\\d{16}" maxlength="16" required placeholder="16-digit number">
                </div>

                <div>
                    <label for="expiryDate">Expiry Date (MM/YY):</label>
                    <input type="text" id="expiryDate" name="expiryDate" pattern="(0[1-9]|1[0-2])\\/(\\d{2})" required placeholder="MM/YY">
                </div>

                <div>
                    <label for="cvc">CVC:</label>
                    <input type="text" id="cvc" name="cvc" pattern="\\d{3}" maxlength="3" required placeholder="3-digit code">
                </div>

                <button type="submit" class="checkout-button">Place Order</button>
            </form>
        </section>
    </main>

    <footer>
        <p>&copy; 2025 Digital Library</p>
    </footer>

    <!-- JavaScript -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // העברת אימייל למשתמש (אופציונלי)
            const emailInput = document.querySelector("#email");
            if (emailInput && "@userEmail") {
                emailInput.value = "@userEmail";
            }

            // אימות טופס
            document.querySelector("#checkoutForm").addEventListener("submit", function (event) {
                const cardOwner = document.querySelector("#cardOwner").value.trim();
                const cardNumber = document.querySelector("#cardNumber").value.trim();
                const expiryDate = document.querySelector("#expiryDate").value.trim();
                const cvc = document.querySelector("#cvc").value.trim();

                let errors = [];

                if (!cardOwner) {
                    errors.push("Card Owner Name is required.");
                }
                if (!/^\d{16}$/.test(cardNumber)) {
                    errors.push("Card Number must be a 16-digit number.");
                }
                if (!/^(0[1-9]|1[0-2])\/\d{2}$/.test(expiryDate)) {
                    errors.push("Expiry Date must be in the format MM/YY.");
                }
                if (!/^\d{3}$/.test(cvc)) {
                    errors.push("CVC must be a 3-digit number.");
                }

                if (errors.length > 0) {
                    alert(errors.join("\n"));
                    event.preventDefault();
                }
            });
        });
    </script>
</body>

</html>