@using MVC.Models


<section class="cart-section">
    <h2>Your Cart</h2>
    @if (!Model.Any())
    {
        <p>Your cart is empty.</p>
    }
    else
    {
        <table>
            <thead>
                <tr>
                    <th>Book Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Type</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.BookName</td>
                        <td>@item.Price</td>
                        <td>@item.Quantity</td>
                        <td>@item.Type</td>
                        <td>
                            <button onclick="removeFromCart(@item.BookId, '@item.Type')" class="btn btn-danger">Remove</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="@Url.Action("CheckoutPage", "Order")" class="btn btn-primary">Proceed to Checkout</a>
    }

    <script>
        function removeFromCart(bookId, type) {
            $.post('@Url.Action("RemoveFromCart", "Cart")', { bookId: bookId, type: type }, function() {
                location.reload();
            });
        }
    </script>
</section>
