@{
    Layout = null;
    var cart = Session["Cart"] as List<MVC.Models.CartItem> ?? new List<MVC.Models.CartItem>();

}

<h1>Your Cart</h1>
@if (cart == null)
{
    <p>Your cart is empty.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Book Name</th>
                <th>Type</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in cart)
            {
                <tr>
                    <td>@item.BookName</td>
                    <td>@item.Type</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td>
                        <button onclick="removeFromCart(@item.BookId, '@item.Type')" class="btn btn-danger">Remove</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a href="@Url.Action("Checkout", "Order")" class="btn btn-primary">Proceed to Checkout</a>
}
<script>
    function removeFromCart(bookId, type) {
        $.post('/Cart/RemoveFromCart', { bookId: bookId, type: type }, function (response) {
            if (response.success) {
                alert(response.message); // הודעת הצלחה
                location.reload(); // טוען מחדש את העמוד כדי לעדכן את העגלה
            } else {
                alert('Error: ' + response.message); // הודעת שגיאה
            }
        }).fail(function () {
            alert("An error occurred. Please try again."); // טיפול בשגיאה כללית
        });
    }
</script>